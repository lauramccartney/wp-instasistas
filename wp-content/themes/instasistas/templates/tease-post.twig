{% extends "tease.twig" %}

{% block content %}
	<h2><a href="{{post.link}}">{{post.title}}</a></h2>

	<a class="tease-location" href="{{ post.meta('location').link }}">
		{{ post.meta('location').name }} - {{ post.meta('location').area }}
	</a>

		<p>{{post.preview.length(25)}}</p>
		{% if post.thumbnail.src %}

			<div class="tease-image-wrapper" style="background-image: url('{{post.thumbnail.src}}')"></div>

		{% endif %}
{% endblock %}
